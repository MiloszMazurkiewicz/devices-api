# Database Configuration
# These environment variables can be used to override default database credentials
# Copy this file to .env and modify as needed (not required for development)

# Database URL
# Default: jdbc:postgresql://localhost:5432/devicesdb (local)
#          jdbc:postgresql://postgres:5432/devicesdb (docker)
DB_URL=jdbc:postgresql://localhost:5432/devicesdb

# Database Username
# Default: devices
DB_USERNAME=devices

# Database Password
# Default: devices
# IMPORTANT: Change this in production environments!
DB_PASSWORD=devices

# PostgreSQL Database Name (Docker only)
# Default: devicesdb
POSTGRES_DB=devicesdb
